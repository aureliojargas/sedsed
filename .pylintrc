[MESSAGES CONTROL]
# Run all checks except those
enable=all
disable=
    locally-disabled,
    suppressed-message,
    fixme,
    missing-docstring,

[VARIABLES]
allow-global-unused-variables=no

[FORMAT]
max-line-length=120  # wide screen monitors are nice
expected-line-ending-format=LF  # enforce Unix \n

# No reports, please
[MASTER]
persistent=no
[REPORTS]
reports=no
score=no
